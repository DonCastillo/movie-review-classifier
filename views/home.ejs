        <![endif]-->
        <div id="wrapper" class="d-flex justify-content-center align-items-center">
            <div id="app" class="container px-3">
                <div class="row">
                    <div class="col-12 col-md-6 py-3">
                        <h2>Movie Review Classifier</h2>
                        <strong>Let me guess if the review is positive or negative. For accurate prediction, make the review long.</strong>
                        <form action="">
                            <input type="text" name="title" class="form-control mt-4" placeholder="Enter movie title">
                            <textarea name="review" id="" class="form-control mt-4" placeholder="Write your review"></textarea>
                            <div class="d-flex justify-content-end">
                                <button type="submit" class="btn btn-success form-control w-auto float-end mt-4">POST</button>
                            </div>
                        </form>
                    </div>
                    <div class="col-12 col-md-6 py-3">
                        <div id="review-list" class="bg-light p-2">
                            List of reviews here ...
                        </div>
                        <button class="btn btn-secondary form-control w-auto float-end mt-4" id="clear">CLEAR</button>
                    </div>
                </div>
            </div>
        </div>
        
        
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" 
                integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" 
                crossorigin="anonymous">
        </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" 
                integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" 
                crossorigin="anonymous">
        </script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"
                integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
                crossorigin="anonymous">
        </script>
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <script type="module">


            function reviewCard(title, truncatedReview, predictedClass) {
                let outlineColor = predictedClass == 'neg' ? 'border-danger' : 'border-success'
                let bgColor =  predictedClass == 'neg' ? 'bg-danger' : 'bg-success'
                return `
                    <div class="p-2 border border-1 ${outlineColor} my-2">
                        <strong>
                            ${title} 
                        </strong>
                        <div>
                            ${truncatedReview}
                            <span class="badge ${bgColor} p-1 ms-2 text-white">${predictedClass.toUpperCase()}</span>
                        </div>
                    </div>`
            }


            async function loadReviews() {
                const reviewListEl = $('#review-list')
                await axios.get('/reviews')
                        .then(function(response){
                            const reviews = response.data.data
                            let html = '';
                            if (reviews.length > 0) {
                                reviews.forEach(review => {
                                    html += reviewCard(review.title, review.truncated, review.predicted_class)
                                })
                            } else {
                                html = 'List of reviews here ...'
                            }
                            reviewListEl.html(html)
                        })
                        .catch(function(error){
                            console.error(error.message)
                            reviewListEl.html('Cannot load reviews')
                        })
            }




            $(document).ready(async function(){
                
                await loadReviews()

                $('form').on('submit', async function(event){
                    event.preventDefault();
                    let formData = new FormData(event.target)
                    formData = new URLSearchParams(formData)
                    formData = Object.fromEntries(formData)
                    
                    await axios.post('/test', formData)
                    await loadReviews()
                            
                })
            })

        </script>

    </body>
