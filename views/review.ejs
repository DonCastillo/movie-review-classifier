<html>
    <head>
        <%- include('./partials/head.ejs') %> 
    </head>
    <body class="position-relative">
        <!--[if lt IE 7]>
            <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="#">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->
        <div id="wrapper" class="d-flex justify-content-center align-items-center">
            
            <% var outlineColor = review.predicted_class == 'neg' ? 'border-danger' : 'border-success' %>
            <% var bgColor = review.predicted_class == 'neg' ? 'bg-danger' : 'bg-success' %>

            <div id="review" class="container px-3 position-relative border border-2 <%= outlineColor %>">

                <a href="/" class="btn btn-secondary mt-3 form-control w-auto">BACK</a>

                <span class="badge <%= bgColor %> p-1 ms-2 text-white position-absolute fs-5 border-radius-0">
                   <%= review.predicted_class.toUpperCase() %> 
                </span>

                <div class="row">
                    <div class="col-12 py-3">

                        <h2><%= review.title %> </h2>
                        <div><%= review.raw %> </div>

                        <div class="mt-3">
                            <% for (value of review.values) { %>
                                <div>
                                    <%= value.class %>: 
                                    <%= value.value %> 
                                </div>
                            <% } %>
                        </div>

                    </div>
                </div>
            </div>
            

        </div>
        <%- include('./partials/script.ejs')  %> 
    </body>
</html>